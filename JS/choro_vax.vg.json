{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "background": "#ffffff",
    "projection": {"type": "equirectangular"},
    "title": "Current vaccinated populations around the world",
    "data": {
        "url": "https://raw.githubusercontent.com/user0028/visualization2/main/JS/world.geo.topojson",
        "format": {"type": "topojson", "feature": "world.geo"}
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/user0028/visualization2/main/Data/owid-covid-data.csv"
                },
                "key": "location",
                "fields": ["people_fully_vaccinated_per_hundred", "population"]
            }
        },
        {"calculate": "datum.people_fully_vaccinated_per_hundred", "as": "Percentage of people fully vaccinated"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "Percentage of people fully vaccinated",
            "type": "quantitative",
            "scale": {"scheme": "blues"}
        },
        "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "Country"},
            {"field": "Percentage of people fully vaccinated", "type": "quantitative"}
        ]
    }
}